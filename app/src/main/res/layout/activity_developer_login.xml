<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.qwerty.DeveloperLoginActivity"
    android:background="@drawable/one"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrator Login"
        android:layout_marginTop="120dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/head_forgot"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/head_forgot"
        android:background="#cecece"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/developerLoginId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:textCursorDrawable="@null"
        android:textAlignment="center"
        android:ems="10"
        android:hint="Email Address"
        android:background="@drawable/edit_text"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="#ffffff"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="36dp" />

    <EditText
        android:id="@+id/developerLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/developerLoginId"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:textAlignment="center"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="@drawable/edit_text"

        android:inputType="textPassword" />

    <Button
        android:id="@+id/developerLoginBtn"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in"
        android:layout_below="@+id/developerLoginPassword"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="login" />
</RelativeLayout>
